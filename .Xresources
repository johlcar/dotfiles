URxvt.intensityStyles: false
URxvt.scrollBar: false

! font
URxvt*font: xft:Source Code Pro Medium:size=14:antialias=true:hinting=true,xft:Liberation Mono:size=13:antialias=true:hinting=true

! terminal padding
URxvt.internalBorder: 10

Xft.autohint:   0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting:    true
Xft.antialias:  true
Xft.rgba: rgb

!! Extensions
URxvt.perl-ext-common:	default,matcher,resize-font
!URxvt.colorUL:		#4682B4

!! resize-font
URxvt.resize-font.smaller:	C-Down
URxvt.resize-font.bigger:	C-Up
!! Matcher
URxvt.url-launcher:	linkhandler
URxvt.matcher.button:	1

! === gruvbox color scheme ===
*background: #1d2021
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

!URxvt.depth:		32
!URxvt.cursorColor:	lightgrey

